<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/NameET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/EnterTaskET"
        app:layout_constraintTop_toBottomOf="@+id/EnterTaskET" />

    <EditText
        android:id="@+id/EnterTaskET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/EnterTaskTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:text="@string/enter_task"
        app:layout_constraintBaseline_toBaselineOf="@+id/EnterTaskET"
        app:layout_constraintEnd_toStartOf="@+id/EnterTaskET" />

    <TextView
        android:id="@+id/NameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:text="@string/who_did_it"
        app:layout_constraintBaseline_toBaselineOf="@+id/NameET"
        app:layout_constraintEnd_toStartOf="@+id/NameET" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button"
        app:layout_constraintEnd_toEndOf="@+id/NameET"
        app:layout_constraintTop_toBottomOf="@+id/NameET" />
</androidx.constraintlayout.widget.ConstraintLayout>